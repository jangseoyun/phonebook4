<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">
   
   <!-- 쿼리문 작성 -->
	<select id="selectList" resultType="com.javaex.vo.PersonVo" >
		<![CDATA[
			select  person_id personId,
	        		name,
	        		hp,
	        		company
			from person
			order by person_id desc
		]]>
	</select>
	
	<!-- insert는 저장만 하면 끝 따라서 resultType은 없다. 숫자로 오는것은 그냥 오는 것 -->
	<!-- 데이터를 외부에서 받아서 기능처리를 해야함 parameterType -->
	<insert id="insert" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[
			insert into person
			values(
				seq_person_id.nextval, 
				#{name},
				#{hp},
				#{company}
			)
		]]>
	</insert>
	
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from person
			where person_id = #{personId}
		]]>
	</delete>
	
	<!-- updateForm 한명의 데이터 불러오기 -->
	<select id="updateForm" parameterType="int" resultType="com.javaex.vo.PersonVo">
		<![CDATA[
			select  person_id personId,
			        name,
			        hp,
			        company
			from person
			where person_id = #{personId}
		]]>
	</select>
	
	<!-- update 한명의 데이터 수정하기-->
	<update id="update" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[
			update person
			set name = #{name},
		    	hp = #{hp},
		    	company = #{company}
			where person_id = #{personId}
		]]>
	</update>
	

</mapper>
